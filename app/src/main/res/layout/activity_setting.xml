<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">

	<TextView
		style="@style/TitleStyle"
		android:text="设置中心" />

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:padding="5dp">

		<com.ayuan.mobilesafe.view.SettingItemView xmlns:mobilesafe="http://schemas.android.com/apk/com.ayuan.mobilesafe"
			android:id="@+id/siv_update"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="@drawable/selector_atool_item_bg"
			android:paddingLeft="3dp"
			android:paddingRight="3dp"
			mobilesafe:desoff="自动更新已关闭"
			mobilesafe:deson="自动更新已开启"
			mobilesafe:destitle="自动更新设置" />

		<com.ayuan.mobilesafe.view.SettingItemView xmlns:mobilesafe="http://schemas.android.com/apk/com.ayuan.mobilesafe"
			android:id="@+id/siv_address"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="3dp"
			android:background="@drawable/selector_atool_item_bg"
			android:paddingLeft="3dp"
			android:paddingRight="3dp"
			mobilesafe:desoff="归属地显示已关闭"
			mobilesafe:deson="归属地显示已开启"
			mobilesafe:destitle="电话归属地的显示设置" />

		<com.ayuan.mobilesafe.view.SettingClickView
			android:id="@+id/scv_toast_style"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="3dp"
			android:background="@drawable/selector_atool_item_bg"
			android:paddingLeft="3dp"
			android:paddingRight="3dp" />
	</LinearLayout>
	<!--
		SettingItemView需要在构建布局的时候是定行营的title和des的字符串内容
		自定义属性
	-->
</LinearLayout>