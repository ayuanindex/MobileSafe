<?xml version="1.0" encoding="UTF-8" ?>
<resources>

	<!-- Base application theme. -->
	<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>
	</style>

	<!--标题栏样式-->
	<style name="TitleStyle">
		<item name="android:textSize">20sp</item>
		<item name="android:paddingTop">10dp</item>
		<item name="android:paddingBottom">10dp</item>
		<item name="android:background">#767676</item>
		<item name="android:textColor">#ffffff</item>
		<item name="android:gravity">center</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_width">match_parent</item>
	</style>

	<style name="MarqueenStyle">
		<item name="android:padding">5dp</item>
		<item name="android:singleLine">true</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_width">match_parent</item>
		<!--设置跑马灯效果-->
		<item name="android:ellipsize">marquee</item>
		<!--设置为始终获取焦点-->
		<item name="android:focusableInTouchMode">true</item>
		<!--设置为一直滚动-->
		<item name="android:marqueeRepeatLimit">marquee_forever</item>
	</style>

	<!--下一页按钮的样式-->
	<style name="NextButtonStyle">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_alignParentBottom">true</item>
		<item name="android:text">下一页</item>
		<item name="android:layout_alignParentRight">true</item>
		<item name="android:drawableRight">@android:drawable/ic_media_ff</item>
		<item name="android:background">@drawable/selector_next_button_bg</item>
	</style>

	<style name="PreviousButtonStyle">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_alignParentBottom">true</item>
		<item name="android:text">上一页</item>
		<item name="android:layout_alignParentLeft">true</item>
		<item name="android:drawableLeft">@android:drawable/ic_media_rew</item>
		<item name="android:background">@drawable/selector_next_button_bg</item>
	</style>

	<style name="SetEntryMargins">
		<item name="android:paddingLeft">4dp</item>
		<item name="android:paddingRight">4dp</item>
		<item name="android:layout_marginTop">8dp</item>
	</style>
</resources>
